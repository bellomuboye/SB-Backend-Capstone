<% include /partials/menu%>

  <div class="ui container">
    <h1 class="ui centered header">Account Profile</h1>
    <hr>
    <div class="section">
      <img class="ui small centered circular image" src="<%= data.avatar %>">
      <div class="ui grid">

      <% let evalDisable; %>
      <% if (owner) { %>
      <% evalDisable = ""; %>
      <%} else { %>
      <% evalDisable = "disabled='disabled'" ;%>
      <% } %>
      
        <form action="<%= '/profile/update'%>" method="post" class="ui centered form" enctype="multipart/form-data">
        <fieldset <%= evalDisable%>>
<input type="file" name="imageavatar" id="imageavatar">
          <div class="field">
            <label>Name</label>
            <input type="text" name="name" value="<%= data.name %>">
          </div>
          <div class="field">
            <label>Username</label>
            <input type="text" name="username" value="<%= data.username %>">
          </div>
          <div class="field">
            <label>Email</label>
            <input type="text" name="email" value="<%= data.email %>">
          </div>
          <div class="field">
            <label>Location</label>
            <input type="text" name="location" value="<%= data.location %>">
          </div>
          <div class="field">
            <label>Bio</label>
            <textarea name="bio" rows="4" cols="40"><%= data.bio %></textarea>
          </div>
          <input type="hidden" name="avatar" value=<%=data.avatar %>>
          <button class="ui right floated  orange button" type="submit">Update</button>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
